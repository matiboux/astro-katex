<script type="module">
    // That's a hack :(
    import renderMathInElement from "https://cdn.jsdelivr.net/npm/katex@0.15.3/dist/contrib/auto-render.mjs";
    try {
        if (typeof renderMathInElement === 'function')  {
            const mathBoard = window?.document.getElementsByClassName('latex');
            for (let i = 0; i<mathBoard.length; i++) {
                renderMathInElement(mathBoard[i]);
            }
        } else {
            throw new Error('KaTex\'s auto-render plugin Couldn\' be inicialized.')
        }

    } catch(e) {
        console.error(e.message);
    }
</script>